<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAddEvent">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Name"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/nameText"
                android:layout_toRightOf="@+id/name"
                android:layout_alignTop="@+id/name"
                android:inputType="textCapWords"
                android:maxLength="2000"
                android:maxLines="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the Name here" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:id="@+id/pos"
                android:text="Position"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/posText"
                android:layout_toRightOf="@+id/pos"
                android:layout_alignTop="@+id/pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_alignStart="@+id/nameText"
                android:inputType="textCapWords"
                android:hint="Enter the Position here" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img"
                android:layout_below="@+id/pos"
                android:text="Image"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"/>



            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_below="@+id/img"
                android:layout_marginTop="30dp"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_person_add_black_24dp"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="25dp"
                android:id="@+id/submit"
                android:layout_below="@+id/imgView"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="70dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>


</FrameLayout>