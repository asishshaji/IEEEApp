<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/body"
                android:text="Body"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/bodyText"
                android:layout_toRightOf="@+id/body"
                android:layout_alignTop="@+id/body"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter the context here" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bodyText"
                android:id="@+id/title"
                android:text="Title"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/titleText"
                android:layout_toRightOf="@+id/title"
                android:layout_alignTop="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_alignStart="@+id/bodyText"
                android:inputType="textCapWords"
                android:hint="Enter the Title here" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img"
                android:layout_below="@+id/title"
                android:text="Image"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:id="@+id/imgext"
                android:layout_below="@+id/titleText"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="70dp"
                android:layout_centerHorizontal="true"/>



            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_below="@+id/img"
                android:layout_marginTop="30dp"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_add_a_photo_black_24dp"/>







            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submit"
                android:layout_below="@+id/imgView"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="70dp"
                android:layout_centerHorizontal="true"/>




        </RelativeLayout>
    </ScrollView>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        />


</RelativeLayout>
